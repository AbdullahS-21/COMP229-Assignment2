<div class="row justify-content-lg-center g-3">
    <h1><%= title %> Clothing Item</h1>

    <form method="POST" class="col-lg-6 col-md-10 col-sm-10">
        <div class="input-group mb-3">
            <span class="input-group-text" id="inputGroup-name">FullName</span>
            <input type="text" class="form-control" placeholder="Enter FullName" aria-label="Clothing Name" aria-describedby="Clothing Name"
            name="FullName" value="<%= contacts.FullName %>" required>
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text" id="inputGroup-name">PhoneNumber</span>
            <input type="text" class="form-control" placeholder="Enter Clothing Name" aria-label="Clothing Brand" aria-describedby="Clothing Brand"
            name="ContactNumber" value="<%= contacts.ContactNumber %>" required>
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text" id="inputGroup-name">EmailAddress</span>
            <input type="text" class="form-control" placeholder="Enter Clothing Category" aria-label="Clothing Category" aria-describedby="Clothing Category"
            name="EmailAddress" value="<%= contacts.EmailAddress %>" required>
        </div>


            <% if(title == "Edit") { %>
                <button type="submit" id="editButton" class="btn btn-primary"><i class="fas fa-edit fa-lg"></i> Edit</button>
            <% } else { %>
                <button type="submit" id="addButton" class="btn btn-primary"><i class="fas fa-plus-circle fa-lg"></i> Add</button>
            <% } %>  
            
            <a href="/contacts-list" id="cancelButton" type="button" class="btn btn-warning"><i class="fas fa-undo"></i> Cancel</a>
        </div>
    </form>
</div>